<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/date"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/ly1"
            android:layout_marginEnd="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/msg1"
                style="@style/Button"
                app:backgroundTint="#4A4A4A"
                android:text="lorem lipsum  DASNAVIS FINANCE PRIVATE LIMITED DASNAVIS FINANCE PRIVATE LIMITED DASNAVIS FINANCE PRIVATE LIMITED"
                android:padding="5dp"
                android:gravity="start|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/time1"
                android:layout_alignEnd="@+id/msg1"
                android:text="3:30 pm"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:textSize="8dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginStart="80dp"
            android:id="@+id/lyown"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/msgown"
                style="@style/Button2"
                android:text="ANCE PRIVATE LIMITED"
                app:backgroundTint="#4A4A4A"
                android:padding="5dp"
                android:gravity="start|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/timeown"
                android:layout_alignEnd="@+id/msgown"
                android:text="3:30 pm"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="6dp"
                android:textSize="8dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</layout>